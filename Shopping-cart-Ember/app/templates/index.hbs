<div>
  <div class="row">
    <div class="col-sm-4 filter-input">
      <i class="glyphicon glyphicon-search search-icon" aria-hidden="true"></i>
      {{input type="text" value=filter  key-up=(action "keyUp") placeholder="search" class="form-group input-text"}}
    </div>
    <div class="col-sm-4">
      <a href="javascript:void(0);" class="cart-icon" {{action "toggleModal" true}}>
        {{if addedProducts.length addedProducts.length}} <span class="glyphicon glyphicon-shopping-cart"></span>
      </a>
    </div>
  </div>

  <div class="wrapper--site">
    <main>
      <section class="product" id="product">
        <div class="container-fluid wrapper">
          {{available-items
              products=availableProducts
              addOrRemove=(action "addOrRemove")
          }}
        </div>
      </section>
    </main>
  </div>
  {{#if showModal}}
    <div class="modal-view">
      {{cart-items
              products=addedProducts
              addOrRemove=(action "addOrRemove")
              toggleModal=(action "toggleModal")
      }}
    </div>
  {{/if}}
</div>
{{outlet}}